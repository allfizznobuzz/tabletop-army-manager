rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Army files - users can upload/manage their own army files
    match /armies/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Game assets - participants can read, owner can write
    match /games/{gameId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        exists(/databases/(default)/documents/games/$(gameId)) &&
        request.auth.uid in get(/databases/(default)/documents/games/$(gameId)).data.players;
    }
    
    // Public army templates
    match /templates/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
