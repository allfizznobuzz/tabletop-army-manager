# Copy this file to .env.local and fill with your Firebase Web App config
# Values can be found in Firebase Console → Project Settings → General → Your apps → Web app → SDK setup and configuration

REACT_APP_FIREBASE_API_KEY=
REACT_APP_FIREBASE_AUTH_DOMAIN=
REACT_APP_FIREBASE_PROJECT_ID=
REACT_APP_FIREBASE_STORAGE_BUCKET=
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=
REACT_APP_FIREBASE_APP_ID=

# Optional: set to 'true' to use Firebase emulators locally
REACT_APP_USE_FIREBASE_EMULATOR=

# Optional: force redirect-based Google sign-in (helps with popup blockers)
REACT_APP_AUTH_FORCE_REDIRECT=true
